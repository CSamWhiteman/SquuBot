{% extends "base.jinja2" %}
{% block title %}
  Runs for {{ profile.name }}
{% endblock %}
{% block content %}
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li><a href="/runs">Run histories</a></li>
      <li class="is-active"><a href="/profile/{{ profile.index }}/runs">{{ profile.name }}</a></li>
    </ul>
  </nav>
  <div id="win-streaks" class="columns">
    <div class="column">
      <div class="box container">
        <h5 class="title is-5">Rotating: {{ profile.rotating_streak }}</h5>
        <h5 class="title is-5">Ironclad: {{ profile.ironclad_streak }}</h5>
        <h5 class="title is-5">Silent: {{ profile.silent_streak }}</h5>
        <h5 class="title is-5">Defect: {{ profile.defect_streak }}</h5>
        <h5 class="title is-5">Watcher: {{ profile.watcher_streak }}</h5>
      </div>
    </div>
    <div class="column is-four-fifths">
      <div id="run-list" class="container">
        {% for run in profile.runs %}
          <a href="/runs/{{ run.name }}"
            class="{{ run.character | lower }} {{ run.verb }} run">
            {% include "partials/run_header.jinja2" %}
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
  
{% endblock %}
